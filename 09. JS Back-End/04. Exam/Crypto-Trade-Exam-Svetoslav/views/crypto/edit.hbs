<section id="edit-container">
    <div class="edit-container-info">
        <h1>Edit Announcement</h1>
        <form method="POST">
            <label>Name:</label>
            <input type="text" id="name" name="name" value="{{crypto.name}}">
            <label>Image:</label>
            <input type="text" id="image" name="cryptoImage" value="{{crypto.cryptoImage}}">
            <label>Price:</label>
            <input type="number" id="price" name="price" value="{{crypto.price}}">
            <label>Description:</label>
            <textarea name="description" id="description">{{crypto.description}}</textarea>
            <label>Payment method:</label>
            <select id="payment" name="paymentMethod" selected="{{crypto.paymentMethod}}">
                {{#if (isSelected crypto.paymentMethod 'crypto-wallet')}}
                <option value="crypto-wallet" selected>Crypto Wallet</option>
                {{else}}
                <option value="crypto-wallet">Crypto Wallet</option>
                {{/if}}
                {{#if (isSelected crypto.paymentMethod 'credit-card')}}
                <option value="credit-card" selected>Credit Card</option>
                {{else}}
                <option value="credit-card">Credit Card</option>
                {{/if}}
                {{#if (isSelected crypto.paymentMethod 'debit-card')}}
                <option value="debit-card" selected>Debit Card</option>
                {{else}}
                <option value="debit-card">Debit Card</option>
                {{/if}}
                {{#if (isSelected crypto.paymentMethod 'paypal')}}
                <option value="paypal" selected>PayPal</option>
                {{else}}
                <option value="paypal">PayPal</option>
                {{/if}}
            </select>
            <input type="submit" id="btn" value="EDIT"></input>
        </form>
    </div>
</section>