<section class="crypto-search">
    <h1>Search</h1>

    <form class="search-form" method="POST">
        <input type="text" class="search-coin" name="name" placeholder="Search here..." value="{{search}}">
        <select id="payment" name="paymentMethod">
            {{#if (isSelected paymentMethod 'crypto-wallet')}}
            <option value="crypto-wallet" selected>Crypto Wallet</option>
            {{else}}
            <option value="crypto-wallet">Crypto Wallet</option>
            {{/if}}
            {{#if (isSelected paymentMethod 'credit-card')}}
            <option value="credit-card" selected>Credit Card</option>
            {{else}}
            <option value="credit-card">Credit Card</option>
            {{/if}}
            {{#if (isSelected paymentMethod 'debit-card')}}
            <option value="debit-card" selected>Debit Card</option>
            {{else}}
            <option value="debit-card">Debit Card</option>
            {{/if}}
            {{#if (isSelected paymentMethod 'paypal')}}
            <option value="paypal" selected>PayPal</option>
            {{else}}
            <option value="paypal">PayPal</option>
            {{/if}}
        </select>
        <button type="submit" class="btn-search">Search</button>
    </form>

    <div class="search-result">
        {{#if cryptos}}
        <div class="search-list">
            {{#each cryptos}}
            <div class="coin">
                <div class="coin-img">
                    <img src="{{cryptoImage}}">
                </div>
                <div class="coin-info">
                    <h1>{{name}}</h1>
                    <p><span>Price: </span>${{price}}</p>
                    <p><span>Payment: </span>{{paymentMethod}}</p>
                </div>

                <a href="/crypto/{{_id}}" class="btn-details">Details</a>
            </div>
            {{/each}}
        </div>
        {{else}}
        {{#if initialLoaded}}
        <div class="no-offer">
            <p>There are no crypto offers found!</p>
        </div>
        {{else}}
        <div class="no-match">
            <p>No match was found!</p>
        </div>
        {{/if}}
        {{/if}}

    </div>

    <!--  -->
</section>