<html lang="en">

<head>
    <!-- Do not forget to change the path to the css file -->
    <link rel="stylesheet" href="/public/static/css/style.css">
    <title>Home Page</title>
</head>

<body>
    {{#if error}}
    <div class="error">
        <p>{{error}}</p>
    </div>
    {{/if}}

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <!-- Do not forget to change the path to the images -->
            <a href="/" style="text-decoration: none">
                <img class="logo" src="/public/static/images/before.png" alt="before-logo">
                <img class="car logo" src="/public/static/images/trip-logo.png" alt="trip-logo">
                <img class="logo" src="/public/static/images/after.png" alt="after-logo">
            </a>
            <div class="collapse navbar-collapse" id="navbarResponsive">

                <ul class="navbar-nav ml-auto">
                    <!-- Guest users and Logged users -->
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/trips">Shared Trips</a>
                    </li>
                    {{#if isAuth}}
                    <!-- Logged users -->
                    <li class="nav-item">
                        <a class="nav-link" href="/trips/create">Offer Trip</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout as [ {{user.email}} ]</a>
                    </li>
                    {{else}}
                    <!-- Guest users -->
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/register">Register</a>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </nav>

    <main>
        {{{body}}}
    </main>

    <footer id="sticky-footer" class="bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Shared Trip 2021</p>
        </div>
    </footer>
</body>

</html>