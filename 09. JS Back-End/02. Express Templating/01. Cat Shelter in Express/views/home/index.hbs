<main>
    <section class="cats">
        <ul>
            {{#each cats}}
                <li>
                    <img src="/images/{{img}}" alt="Black Cat">
                    <h3>{{name}}</h3>
                    <p><span>Breed: </span>{{breed}}</p>
                    <p><span>Description: </span>{{description}}</p>
                    <ul class="buttons">
                        <li class="btn edit"><a href="/cats/{{id}}">Change Info</a></li>
                        <li class="btn delete"><a href="/cats/shelter/{{id}}">New Home</a></li>
                    </ul>
                </li>
            {{/each}}
        </ul>
    </section>
</main>